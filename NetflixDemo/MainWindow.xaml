<Window x:Class="NetflixDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetflixDemo"
        xmlns:viewmodel="clr-namespace:NetflixDemo.MVVM.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:view="clr-namespace:NetflixDemo.MVVM.View"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        mc:Ignorable="d"
        Background="Black"
        WindowStartupLocation="CenterScreen"
        Height="1080" Width="1920"
        WindowStyle="None"
        WindowState="Maximized"
        AllowsTransparency="True" 
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        ResizeMode="CanResizeWithGrip">
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <!--Visibility="{Binding IsVisibleMainView}"-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Height="50" Background="Transparent" MouseDown="BorderDrag_MouseDown" Visibility="{Binding HeaderVisibility}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>
                <Image 
                       RenderOptions.BitmapScalingMode="Fant"
                       Source="./Icons/NetFlixLG.png"/>
                <StackPanel Grid.Column="1" HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding HomeCommand}"
                        Content="Home"
                        Style="{StaticResource ButtonText}"
                        Margin="0,0,20,0"/>
                    <Button 
                        Content="Movies"
                        Style="{StaticResource ButtonText}"
                        Margin="0,0,20,0"/>
                    <Button
                        Content="Series"
                        Style="{StaticResource ButtonText}"
                        Margin="0,0,20,0"/>
                    <Button 
                        Content="Catagories"
                        Style="{StaticResource ButtonText}"
                        Margin="0,0,20,0"/>
                    <Button
                        Content="My List"
                        Style="{StaticResource ButtonText}"
                        Margin="0,0,20,0"/>

                </StackPanel>
                <TextBox Grid.Column="2"
                        Background="#282D3C"
                        HorizontalAlignment="Right"
                        Padding="8,10"
                        Width="350"
                        Foreground="#F2F2F2"
                        materialDesign:HintAssist.Hint="🔍 Titles, People, Genres"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                <StackPanel Grid.Column="3" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Content="_"
                        FontSize="25"
                        Style="{StaticResource ButtonState}"
                        Click="Minimize_ButtonClick"/>
                    <!--<Button 
                        Content="□"
                        FontSize="25"
                        Style="{StaticResource ButtonState}"
                        Click="WindowState_ButtonClick"/>-->
                    <Button
                        Content="╳"
                        Style="{StaticResource ButtonState}"
                        Click="Close_ButtonClick"/>
                </StackPanel>
            </Grid>
        </Border>
        <ContentControl Grid.Row="1" Content="{Binding LoadedControl}"></ContentControl>
    </Grid>
</Window>
